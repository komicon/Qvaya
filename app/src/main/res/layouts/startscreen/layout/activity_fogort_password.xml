<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login.FogortPassword"
    tools:layout_editor_absoluteY="25dp">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayout100"
        android:layout_width="0dp"


        android:layout_height="0dp"
        android:layout_marginBottom="370dp"
        android:layout_marginEnd="51dp"
        android:layout_marginLeft="51dp"
        android:layout_marginRight="51dp"
        android:layout_marginStart="51dp"
        android:layout_marginTop="30dp"
        android:hint="Student number"
        app:layout_constraintBottom_toTopOf="@+id/SendToMyEmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <EditText
            android:id="@+id/StudentNumberTxtForgort"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textEmailAddress"
            android:labelFor="@+id/EmailEMployeeBus"
            android:maxLength="8" />

    </android.support.design.widget.TextInputLayout>

    <android.support.v7.widget.AppCompatButton

        android:id="@+id/SendToMyEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginBottom="5dp"
        android:onClick="SendEmailBTN"
        android:text="Send to Email"
        android:textColor="@color/white"
        app:backgroundTint="@color/darkgrey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout100"
        tools:ignore="MissingConstraints" />


</android.support.constraint.ConstraintLayout>
