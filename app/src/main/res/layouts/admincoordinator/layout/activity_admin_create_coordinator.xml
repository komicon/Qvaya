<?xml version="1.0" encoding="utf-8"?>

<ScrollView

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <RelativeLayout


        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:context="com.example.thando.qvaya.AdminCoordinator.AdminCreateCoordinator">


        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayout11"
            android:layout_width="282dp"

            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="58dp"
            android:hint="name">

            <EditText
                android:id="@+id/EmpNameTxt"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:inputType="text"
                android:labelFor="@+id/EmpNameTxt"
                android:maxLength="100" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayout12"

            android:layout_width="282dp"


            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="127dp"
            android:hint="surname">

            <EditText
                android:id="@+id/EmpSurnametxt"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:filterTouchesWhenObscured="true"
                android:inputType="text|textPersonName"
                android:labelFor="@+id/EmpSurnametxt"
                android:maxLength="100" />


        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayout22"
            android:layout_width="281dp"


            android:layout_height="60dp"
            android:layout_below="@+id/textInputLayout12"
            android:layout_centerHorizontal="true"
            android:hint="year_started">

            <EditText
                android:id="@+id/testtxt"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:inputType="number"
                android:labelFor="@+id/testtxt"
                android:maxLength="4" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayout15"
            android:layout_width="282dp"


            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="246dp"
            android:hint="email">

            <EditText
                android:id="@+id/EmailEMployeeBus"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:inputType="textEmailAddress"
                android:labelFor="@+id/EmailEMployeeBus"
                android:maxLength="100" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayout16"
            android:layout_width="282dp"


            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="298dp"
            android:hint="age">

            <EditText
                android:id="@+id/AgeEmptxt"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:inputType="number"
                android:maxLength="2" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayout17"
            android:layout_width="282dp"


            android:layout_height="60dp"
            android:layout_below="@+id/textInputLayout16"
            android:layout_centerHorizontal="true"
            android:hint="home_address">

            <EditText
                android:id="@+id/HomeAddEmptxt"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:inputType="text|textAutoComplete|textMultiLine|textEmailAddress"
                android:labelFor="@+id/HomeAddEmptxt"
                android:maxLength="100" />

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayout14"
            android:layout_width="281dp"


            android:layout_height="60dp"
            android:layout_above="@+id/imagetxt"
            android:layout_centerHorizontal="true"
            android:hint="cell_number">

            <EditText
                android:id="@+id/CellNumbertxt"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:inputType="phone"
                android:maxLength="10" />

        </android.support.design.widget.TextInputLayout>


        <android.support.v7.widget.AppCompatButton

            android:id="@+id/CreateDriverAdmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:onClick="CreateCoordinaAdminBTN"
            android:text="create_coordinator"
            android:textColor="@color/white"
            app:backgroundTint="@color/darkgrey" />


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="19dp"
            android:clickable="true"
            android:focusable="true"
            app:backgroundTint="@color/cardview_light_background"
            app:srcCompat="?android:attr/homeAsUpIndicator" />

        <Spinner
            android:id="@+id/spinnerGender"
            android:layout_width="278dp"
            android:layout_height="38dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="11dp"
            android:entries="@array/Gender" />

        <Button
            android:id="@+id/CaptureImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="177dp"
            android:text="Capture Image" />


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_below="@+id/CaptureImage"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-177dp"
            android:background="@drawable/placeholder" />

        <EditText
            android:id="@+id/imagetxt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"


            android:layout_above="@+id/CaptureImage"
            android:layout_alignParentStart="true"
            android:ems="10"
            android:gravity="center"
            android:hint="Enter Image Name"
            android:inputType="textPersonName" />


    </RelativeLayout>

</ScrollView>
